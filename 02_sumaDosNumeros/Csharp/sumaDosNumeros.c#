using System;
public class sumaDosNumeros
{
    public static void Main(String[] args)
    {
        double num1,num2,suma;                      //Declaracion de variables
        Console.Write("Este programa suma dos numeros\n");
        Console.Write("Ingresa primer numero: ");
        num1=Convert.ToDouble(Console.ReadLine());  //Lectura de valor num1
        Console.Write("Ingresa segundo numero: ");
        num2=Convert.ToDouble(Console.ReadLine());  //Lectura de valor num2
        suma=num1+num2;                             //Operacion suma
        Console.WriteLine("La suma es: {0:G}",suma);//Impresion resultado
    }
}